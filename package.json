{
  "name": "callrail-backend",
  "version": "1.0.0",
  "description": "CallRail Clone Backend",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "db:create": "ts-node scripts/createDatabase.ts",
    "db:migrate": "ts-node scripts/migrate.ts",
    "db:seed": "ts-node scripts/seed.ts",
    "db:setup": "npm run db:create && npm run db:migrate && npm run db:seed",
    "db:reset": "ts-node scripts/resetDatabase.ts && npm run db:migrate && npm run db:seed",
    "db:checkTable": "ts-node scripts/checkTables.ts",
    "db:checkSchema": "ts-node scripts/checkSchema.ts",
    "db:seed:calls": "ts-node scripts/seedCalls.ts",
    "test:setup": "ts-node scripts/setupTwilioTest.ts",
    "test:cleanup": "ts-node scripts/cleanupTwilioTest.ts",
    "test:checkCallsSchema": "ts-node scripts/checkCallsSchema.ts",
    "dni:setup": "ts-node scripts/setupDni.ts",
    "dni:test": "ts-node scripts/testDni.ts",
    "test:port:number": "ts-node scripts/checkTwilioPortable.js"
  },
  "dependencies": {
    "@types/bull": "^3.15.9",
    "@types/ws": "^8.18.1",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "express-ws": "^5.0.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-mailjet": "^6.0.9",
    "pg": "^8.11.0",
    "rate-limiter-flexible": "^7.2.0",
    "redis": "^4.6.5",
    "sequelize": "^6.32.1",
    "sequelize-typescript": "^2.1.5",
    "socket.io": "^4.6.1",
    "twilio": "^5.8.0",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.2.5",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**",
      "!src/database/**"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 30000
  }
}
